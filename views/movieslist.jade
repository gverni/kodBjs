extends layout

block content
	div(class="page-header")
		h1(class="text-center text-info")
			| #{title}
  
	div(class="row")
		- var index = 0
		each movie in movies
			if (index == 4)
				- index = 1 
				div(class="row")
			else 
				- index++ 
			div(class="col-sm-3 col-md-3")
				div(class="thumbnail")
					img(src="#{movie.poster}", height="50%", width="50%") 
					div(class="caption")  
						p(class="text-center")
							| #{movie.title}
						p(class="text-center")
							| <button type="button" class="btn btn-info">Info</button>
     



